{
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "tests"   // make sure your tests folder is included here
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
